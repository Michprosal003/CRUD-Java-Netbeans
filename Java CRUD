    public Registro() {
        initComponents();
        
        //**********************************//
        
        setLocationRelativeTo(null);
        Mostrar("");
        
        
        
        
        //**********************************//
    
    }
    
    
    
    
    //**********************Consulta de la Tabla*************************//
    
    
    public void Mostrar(String Nombre)  {
        
        DefaultTableModel modelo = new DefaultTableModel();
        modelo.addColumn("ID");
        modelo.addColumn("Nombre");
        modelo.addColumn("Apellido");
        modelo.addColumn("Codigo");
        modelo.addColumn("Materia");
        modelo.addColumn("Nota");
        modelo.addColumn("Jornada");
        modelo.addColumn("Estado");
        
        Tabla.setModel(modelo);
        
        String sql="";
        
        if(Nombre.equals(""))
        {
            sql=" Select * from curso";
        }
        
        else 
        {
            
            
            
            sql="select * from curso where Nombre like '%"+Nombre+"'";
        }
        
        
        String Estudiantes[]=new String[8];
        
        Statement set;
        
        try {
            
            set = conectar.createStatement();
            ResultSet resul=set.executeQuery(sql);
            while(resul.next()) {
                
              Estudiantes[0]=resul.getString(1);
              Estudiantes[1]=resul.getString(2);
              Estudiantes[2]=resul.getString(3);
              Estudiantes[3]=resul.getString(4);
              Estudiantes[4]=resul.getString(5);
              Estudiantes[5]=resul.getString(6);
              Estudiantes[6]=resul.getString(7);
              Estudiantes[7]=resul.getString(8);
              
              modelo.addRow(Estudiantes);
              
              
                           
            }
            
            
            Tabla.setModel(modelo);
        }
        catch(SQLException ex) {
            
            Logger.getLogger(Registro.class.getName()).log(Level.SEVERE,null,ex); 
            
        }
        
            
            
            
            
            
        }
        
        
   
